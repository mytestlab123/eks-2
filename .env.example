# Repo-local defaults (no secrets). Copy to ~/.env and edit.

export ENV=dev               # dev|prod
export OS_VERSION="Amazon Linux 2023"

# Nextflow common
export NXF_VER=24.04.4       # pin dev; prod may differ
export NXF_OFFLINE=false     # prod=true
export NXF_HOME="$HOME/.nextflow"
export NXF_WORK="/tmp/nxf-work"

# AWS (non-secret identifiers only)
export AWS_DEFAULT_PROFILE="default"   # profile name only

# Registry proxies (no tokens here)
export REGISTRY_PROXY="quay.io"

# Place secrets in SSM or ~/.env, NEVER commit
# export DOCKER_USER=...
# export DOCKER_PAT=...
# export QUAY_USER=...
# export QUAY_TOKEN=...

